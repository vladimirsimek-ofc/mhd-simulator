<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #fcc0c0;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml" fx:controller="com.vladimirsimek.mhd.AssignmentTwoInfoController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Heading -->
    <Label alignment="CENTER" contentDisplay="TOP" prefHeight="51.0" prefWidth="345.0" text="MHD Simulator">
        <font>
            <Font size="36.0" />
        </font>
    </Label>

    <!-- Welcome Text -->
    <Label fx:id="welcomeText">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- Assignment Info Section -->
    <VBox alignment="CENTER" layoutX="175.0" layoutY="100.0" prefHeight="200.0" prefWidth="250.0" spacing="10.0">
        <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Assignment 2 - Editing and Deleting Objects" />
            <Text text="This assignment focuses on demonstrating editing and deleting capabilities for created objects in the simulation, emphasizing object management for buses, stops, and routes." wrappingWidth="220.0" />
            <Text text="Assignment: Provide functionality for users to edit a 'Stop' or 'Bus' object attributes and delete unnecessary objects in the simulation." wrappingWidth="220.0" />
            <Button onAction="#onStartClick" prefHeight="40.0" prefWidth="240.0" style="-fx-background-color: linear-gradient(to right, #34D399, #10B981); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-cursor: hand;" text="Start" />
        </children>
    </VBox>
</VBox>
