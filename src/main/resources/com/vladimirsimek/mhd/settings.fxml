<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vladimirsimek.mhd.SettingsController"
      style="-fx-background-color: #fcc0c0;">

   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>

   <!-- Heading -->
   <Label alignment="CENTER" contentDisplay="TOP" prefHeight="51.0" prefWidth="345.0" text="MHD Simulator">
      <font>
         <Font size="36.0"/>
      </font>
   </Label>

   <!-- Buttons Section -->
   <VBox alignment="CENTER" spacing="10.0">
      <Button onAction="#onReturnClick" prefHeight="40.0" prefWidth="240.0" text="Return"
              style="-fx-background-color: linear-gradient(to right, #60A5FA, #3B82F6); -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-cursor: hand;"/>
   </VBox>
</VBox>
